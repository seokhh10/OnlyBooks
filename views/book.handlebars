
<div class="text-center">

  {{!-- Reviews will be displayed beside the book, so display reviews attached to this book_id --}}
     
 <div class="container-book row">
        <div class="book-info col-3" id="{{book.id}}">
            <h1>{{book.title}}</h1>
        </div>
        {{!-- Use each reviews as |review| to loop over every review--}}
        <div class="reviews col-8">
          <h3>Reviews</h3>
          <button id="add-new-review" class="btn btn-primary add-review">Add New Review</button>
          {{#each reviews as |review|}}
            <div class="review row">
                <div class="col-2">
                  <div class="rating">{{review.rating}}/5</div>
                  <div class="username">{{review.readerName}}</div>
                </div>
                <div class="col-10">
                  <div class="review-text">
                    {{review.review_text}}
                </div>
                </div>
            </div>
          {{/each}}
        </div>
    </div>
</div>

<div class="modal close-modal">
  <div class="modal-close" id="modal-close">
    <button class="btn btn-white" id="close-0">✖️</button>
    </div>
  <div class="modal-title">
      <h3>Add a New Rewiew to {{book.title}}</h3>
  </div>
  <div class="content">
    <form class="form">
      <div class="row">
      <div class="form-group col-3">
        <label for="raiting">Raiting(0 to 5):</label>
        <input class="form-input" type="number" id="raiting" min="0" max="5"/>
      </div>
      <div class="form-group col-8">
        <label for="review">Review:</label>
        <textarea class="form-input" type="text" id="review"></textarea>
      </div>
      </div>
      <div class="actions">
      <button class="btn btn-primary" type="submit" id="submit-review">Add Review</button>
      <button class="btn btn-light" id="close-1" type="button">Close</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/add-review.js"></script>

